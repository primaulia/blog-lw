<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<%= link_to 'New Article', new_article_path, class: "btn btn-primary btn-lg btn-block my-3" %>

<style>
  .cards-container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-gap: 16px;
  }
</style>

<div class="cards-container">
  <% @articles.each do |article| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"><%= article.body %></p>
        <%= link_to 'Show', article, class: 'card-link btn btn-primary' %>
        <%= link_to 'Delete', article, class: 'card-link btn btn-danger', method: :delete %>
      </div>
    </div>
  <% end %>  
</div>

